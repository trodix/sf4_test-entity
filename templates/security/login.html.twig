{% extends 'base.html.twig' %}

{% block body %}
    <h1>Connexion</h1>

    <form action="{{ path('security_login') }}" method="post">
        <div class="form-group">
            <input placeholder="Adresse mail" type="text" name="_username" class="form-control">
        </div>
        <div class="form-group">
            <input placeholder="Mot de passe" type="password" name="_password" class="form-control">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Se connecter</button>
        </div>
    </form>

{% endblock %}
