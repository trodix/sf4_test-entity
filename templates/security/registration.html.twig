{% extends 'base.html.twig' %}

{% block body %}
    <h1>Inscription</h1>

    {{ form_start(form) }}
    {{ form_row(form.username, {'label': "Nom d'utilisateur", 'attr': {'placeholder': "Nom d'utilisateur"}}) }}
    {{ form_row(form.email, {'label': "Adresse mail", 'attr': {'placeholder': "Adresse mail"}}) }}
    {{ form_row(form.password, {'label': "Mot de passe", 'attr': {'placeholder': "Mot de passe"}}) }}
    {{ form_row(form.confirmPassword, {'label': "Confirmer le mot de passe", 'attr': {'placeholder': "Confirmer le mot de passe"}}) }}
    {{ form_row(form._token) }}
    <button type="submit" class="btn btn-success">Inscription</button>

{% endblock %}
