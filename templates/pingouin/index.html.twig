{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des pingouins</h1>
    <div class="row mb-5">
        <a href="{{ path('pingouin_create') }}" class="btn btn-primary">Cloner un Pingouin !</a>
    </div>
    <div class="row">
        {% for unPingouin in lesPingouins %}
            <div class="col col-3">
                <div class="card">
                    <div class="card-body text-center">
                        <a href="{{ path('pingouin_show', {'id': unPingouin.id}) }}" style="color: {{ unPingouin.couleur }};">
                            <img class="card-img-top mb-3" src="http://placehold.it/200x150" alt="Card image">
                            <div class="card-title">
                                <h4>{{unPingouin.nom}}</h4>
                            </div>
                            <div class="card-text">
                                <p>{{unPingouin.couleur}}</p>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
        {% if not lesPingouins %}
            <p>Il n'y a aucun pingouins !</p>
        {% endif %}
    </div>
{% endblock %}
