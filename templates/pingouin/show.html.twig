{% extends 'base.html.twig' %}

{% block body %}
    <h1>Le pingouin dont l'id est {{ lePingouin.id }}</h1>
    <div class="row">
        <div class="col col-6">
            <div class="card" style="background: {{ lePingouin.couleur }};">
                <div class="card-body text-center">
                    <div class="card-title">
                        <h4>{{lePingouin.nom}}</h4>
                    </div>
                    <div class="card-text">
                        <p>{{lePingouin.couleur}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
